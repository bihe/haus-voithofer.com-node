doctype 5
html(lang='en')
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='')
    meta(name='author', content='Henrik Binggl')
    link(rel='stylesheet', href='./stylesheets/index.css')

    // HTML5 shim, for IE6-8 support of HTML5 elements
    | <!--[if lt IE 9]>  <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>  <![endif]-->

    link(rel='shortcut icon', href='./images/favicon.ico')

    script(src='./javascripts/lazyload.min.js')
  body

    // NAVBAR
    // ==================================================
    div(class='navbar-wrapper')
      // Wrap the .navbar in .container to center it within the absolutely positioned parent.
      div(class='container')
        div(class='navbar navbar-inverse')
          div(class='navbar-inner')
            
            // Responsive Navbar Part 1: Button for triggering responsive navbar (not covered in tutorial). Include responsive CSS to utilize.
            
            a(class='btn btn-navbar', data-toggle='collapse', data-target='.nav-collapse')
              span.icon-bar
              span.icon-bar
              span.icon-bar
            

            //a(class='brand', href='#')
            //  | Haus Voithofer
            
            // Responsive Navbar Part 2: Place all navbar contents you want collapsed withing .navbar-collapse.collapse.
            
            div.nav-collapse.collapse
              ul.nav
                li 
                  a(href='/') #{lingua.Title}
                li
                  a(href='/rooms') #{lingua.Rooms}
                li
                  a(href='/flat') #{lingua.Flat}
                li
                  a(href='/location') #{lingua.Location}
                li
                  a(href='/contact') #{lingua.Contact}

              ul.nav.pull-right
                li.small
                   a(href='?l=de-AT') 
                    span #{lingua.DE}&nbsp;
                    img(src='./images/de.png',alt='switch language de-AT')
                li.small
                  a(href='?l=en-US')
                    span #{lingua.EN}&nbsp;
                    img(src='./images/en.png',alt='switch language en-US')
        

    div#headerimage.carousel
      div.carousel-inner
        div.item.active
          img(src='./images/panorama2_gross.jpg', alt='Neukirchen am Gro&szlig;venediger')
          div.container
            div.carousel-caption
              h1 Haus Voithofer
              p.lead Neukirchen am Gro&szlig;venediger

   
    div.container
     
      block content
          
      hr 

      div#socialshareprivacy.pull-right

      footer
        p &copy; Haus-Voithofer 2013


    script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js')
    script(src='./javascripts/bootstrap.js')
    script
      var i18n = {
        requiredFields: "#{lingua.requiredFields}",
        wrongCaptcha: "#{lingua.wrongCaptcha}",
        notificationError: "#{lingua.notificationError}"
      };
    script(src='./javascripts/main.js')
    script(src='./javascripts/hvapp.js')
    script(src='./javascripts/jquery.socialshareprivacy.min.js')
    script
      jQuery(document).ready(function($){
        if($('#socialshareprivacy').length > 0){
          $('#socialshareprivacy').socialSharePrivacy({
            services : {
              facebook : {
                'status' : 'on',
                'perma_option': 'off',
                'dummy_img': './images/dummy_facebook_en.png',
                'txt_info': '#{lingua.socialFacebook}',
                'language': 'en_US'
              }, 
              twitter : {
                'status' : 'on',
                'perma_option': 'off',
                'dummy_img': './images/dummy_twitter.png',
                'txt_info': '#{lingua.socialTwitter}',
                'language': 'en'
              },
              gplus : {
                'status' : 'on',
                'perma_option': 'off',
                'dummy_img': './images/dummy_gplus.png',
                'txt_info': '#{lingua.socialGplus}',
                'language': 'en'
              }
            },
            'cookie_domain': 'www.haus-voithofer.com',
            'css_path': './stylesheets/socialshareprivacy.css'
          });
 
          $('.settings_info').addClass('hide');
        }
      });